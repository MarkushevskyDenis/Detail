<mvc:View
    controllerName="project1.controller.second"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    displayBlock="true"
    xmlns="sap.m">

    <Page title="Detail">
        <f:SimpleForm id = "detail" title="Product Details">
				<f:content>
                    <HBox>
                        <Image width="30%" alt="no image found" id="image" src="{products1>Image}"/>
                        <VBox>
                            <Label text="Product ID"/>
                            <Text text="{products1>ProductId}" />
                            <Label text="Product Name"/>
                            <Text text="{products1>Name}" />
                            <Label text="Supplier name "/>
                            <Text text="{products1>SupplierName}" />
                            <Label text="Product cost per unit"/>
                            <Text text="{products1>Cost}" />
                            <Label text="Currencykey"/>
                            <Text text="{products1>Currencykey}" />
                            <Label text="Unit"/>
                            <Text text="{products1>Unit}" />
                            <Label text="Weight measure"/>
                            <Text text="{products1>WeightMeasure}" />
                            <Label text="Description"/>
                            <Text text="{products1>Description}" />
                        </VBox>
                    </HBox>
                </f:content>
		</f:SimpleForm>
    </Page>

</mvc:View>
